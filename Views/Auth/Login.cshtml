@model LoginForm

<div class="auth-content-wrapper">
    <div class="auth-wrapper container">
        <div class="auth-content">
            <div class="auth-title">
                Đăng nhập
            </div>
            <div class="auth-form-wrapper">
                <form class="login-form" method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="auth-input-wrapper">
                        <input asp-for="Username" placeholder='Tên đăng nhập' class="auth-input" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="auth-input-wrapper">
                        <input asp-for="Password" placeholder='Mật khẩu' class="auth-input" />
                        @await Html.PartialAsync("Components/_Eye")
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    @* <div class="auth-forget-password-wrapper">
                        <a href='' class="auth-forget-password">
                            Quên mật khẩu?
                        </a>
                    </div> *@
                    <button class="auth-button card-btn">
                        Đăng nhập
                    </button>
                </form>
            </div>
            <div class="auth-other-way">
                Bạn chưa có tài khoản?
                <a href="/Auth/SignUp" class="auth-other-link">Đăng ký</a>
            </div>
        </div>
    </div>
</div>