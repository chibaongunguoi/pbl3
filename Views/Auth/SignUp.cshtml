<div class="auth-content-wrapper">
    <div class="auth-wrapper container">
        <div class="auth-content">
            <div class="auth-title">
                Đăng ký
            </div>
            <div class="auth-form-wrapper">
                <form action="submit_sign_up" class="login-form" method="POST">
                    <div class="auth-input-wrapper">
                        <input name="Name" type="text" placeholder='Họ và tên' class="auth-input" />
                    </div>
              @{
              if (SessionForm.errors.ContainsKey(ErrorKey.name_empty))
              {
                  <div style="color: red;">@SessionForm.errors[ErrorKey.name_empty]</div>
              }
              }
                    <div class="auth-input-wrapper">
                        <div class="auth-label">Giới tính</div>
                        <div class="auth-radio-wapper"> 
                            <label class="auth-label-radio">
                                Nam

                                <input value="male" name="Gender" type="radio" class="auth-radio" checked/>

                            </label>
                            <label class="auth-label-radio">
                                Nữ
                                <input value="female" name="Gender" type="radio" class="auth-radio" />
                            </label>
                        </div>
                    </div>
                    <div class="auth-input-wrapper">
                        <div class="auth-label">Ngày sinh</div>
                        <input name="Bday" type="date" placeholder='Ngày sinh' class="auth-input" />
                    </div>
              @{
              if (SessionForm.errors.ContainsKey(ErrorKey.bday_empty))
              {
                  <div style="color: red;">@SessionForm.errors[ErrorKey.bday_empty]</div>
              }
              } 
                    <div class="auth-input-wrapper">
                        <input name="Tel" type="number" placeholder='Số điện thoại' class="auth-input" onwheel="this.blur()" />
                    </div>
                    <div class="auth-input-wrapper">
                        <input name="Username" type="text" placeholder='Tên đăng nhập' class="auth-input" />
                    </div>
              @{
              if (SessionForm.errors.ContainsKey(ErrorKey.username_empty))
              {
                  <div style="color: red;">@SessionForm.errors[ErrorKey.username_empty]</div>
              } else if (SessionForm.errors.ContainsKey(ErrorKey.username_taken))
              {
                  <div style="color: red;">@SessionForm.errors[ErrorKey.username_taken]</div>
              }
              }               
                    <div class="auth-input-wrapper">
                        <input name="Password" type="password" placeholder='Mật khẩu' class="auth-input" />
                        <div class="hide-show-icon-wrapper">
                            <div class="eye-icon-wrapper" >
                                <svg class="eye-icon eye-close" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 36 36" width="100%" height="100%" >
                                     <path d="M32.711 11c-3.166 4.841-8.573 8.03-14.71 8.03-6.139 0-11.546-3.189-14.712-8.03M9.79 17.5l-3 5m8.5-3-1 5.5m12.5-7.5 3 5m-8.5-3 1 5.5"></path>
                                </svg>  
                                <svg
                                    class="eye-icon eye-open"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 36 36"
                                    width="100%"
                                    height="100%"           >
                                    <circle cx="18" cy="17.5" r="4"></circle>
                                    <path d="M3.284 18.47a1.77 1.77 0 0 1 0-1.94c3.167-4.84 8.573-8.03 14.711-8.03s11.545 3.19 14.711 8.03a1.77 1.77 0 0 1 0 1.94c-3.166 4.84-8.573 8.03-14.71 8.03-6.139 0-11.545-3.19-14.712-8.03"></path>
                                </svg>        
                            </div>
                        </div>
                    </div>
              @{
              if (SessionForm.errors.ContainsKey(ErrorKey.password_empty))
              {
                  <div style="color: red;">@SessionForm.errors[ErrorKey.password_empty]</div>
              }
              }
                    <div class="auth-input-wrapper">
                        <input name="PasswordConfirm" type="password" placeholder='Xác nhận mật khẩu' class="auth-input" />
                    </div>
              @{
              if (SessionForm.errors.ContainsKey(ErrorKey.password_mismatch))
              {
                  <div style="color: red;">@SessionForm.errors[ErrorKey.password_mismatch]</div>
              }
              }
                    @* <div class="auth-forget-password-wrapper">
                        <a href='' class="auth-forget-password">
                            Quên mật khẩu?
                        </a>
                    </div> *@
                    <button class="auth-button card-btn">
                        Đăng ký
                    </button>
                </form>
            </div>
            <div class="auth-other-way">
                Bạn đã có tài khoản?
                <a href="/Auth/Login" class="auth-other-link">Đăng nhập</a>
            </div>
          @{
            if (SessionForm.errors.ContainsKey(ErrorKey.run_out_of_id))
            {
            <div style="color: red;">@SessionForm.errors[ErrorKey.run_out_of_id]</div>
            }
         }       
        </div>
    </div>
</div>
