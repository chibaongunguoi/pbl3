@{
    Layout = "_ManageLayout"; // Sử dụng layout admin

}
<div class="pt-add-content-wrapper">
    <div class="pt-add-content">
        <div class="pt-add-title">Thông tin kì học</div>
        <div class="pt-add-form">
            <form id="pt-add" enctype="multipart/form-data" method="POST">
            
                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label for="">
                            <div class="required-icon">*</div>Khóa học
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <select class="pt-add-form-input pt-course-input" id="comboBox" name="comboBox">
                            <option value="0" >Chọn khóa học đã có sẵn</option>
                            <option value="1">Khóa học 1</option>
                            <option value="2">Khóa học 2</option>
                            <option value="3">Khóa học 3</option>
                        </select>
                    </div>
                </div>

                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label for="cat">
                            <div class="required-icon">*</div>Ngày bắt đầu
                        </label>
                    </div>
                     <div class="pt-add-input-wrapper pt-add-subject-wrapper">
                       <input class="input cb" type="date" name="start_date" >
                    </div>
                     <div class="pt-add-label">
                        <label for="cat">
                            <div class="required-icon">*</div>Ngày kết thúc
                        </label>
                    </div>
                     <div class="pt-add-input-wrapper pt-add-class-wrapper">
                        <input class="input cb" type="date" name="finish_date" >
                    </div>
                </div>
                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label for="">
                            <div class="required-icon">*</div>Số học viên đối đa
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <input class="pt-add-form-input pt-name-input" type="number" name="capacity" placeholder="Nhập vào" maxlength="150" >
                    </div>
                </div>
                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label for="">
                            <div class="required-icon">*</div>Học phí
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <input class="pt-add-form-input pt-add-price-input" type="number" name="fee" placeholder="Nhập vào" maxlength="150" value="">
                        <div class="money-detail">₫</div>
                    </div>
                </div>
                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label for="description">
                            <div class="required-icon">*</div>Mô tả khóa học
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <textarea class="pt-add-form-input detail-input" name="description" id="description"></textarea>
                    </div>
                </div>
                <div class="pt-add-btn-group">
                    <button class="hl-btn"><span>Xác nhận</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
