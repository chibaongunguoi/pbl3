@inject IHttpContextAccessor HttpContextAccessor
@using System.Security.Claims
@using Microsoft.AspNetCore.Http

@{
    Layout = "Manage/_StudentCourseManageLayout";
    var user = HttpContextAccessor.HttpContext?.User;
    string username = User.FindFirst(ClaimTypes.Name)?.Value ?? string.Empty;
}


@section StudentCourseManageScripts {
    <script>
        $('.api-content').html("");
        $.get("/courseAPI/StudentCourse", { username: @username})
            .done(function (data) {
                $('.api-content').html(data);
            })
    </script>
}