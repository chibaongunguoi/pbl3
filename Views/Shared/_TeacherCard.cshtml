@model BriefTeacherCard

<div class="card-product-li">
    <div class="card-product-li-content teacher-card">
        <div class="teacher-card-main-content">
            <div class="thumb" style="width:110px; height:100px !important; max-height:110px !important;">
                <img src="/images/thumbnail/thumbnail.jpg" style="width:100%; height:110px;">
            </div>
            <div style="line-height:150% !important; font-size:14px;">
                <div class="teacher-card-field"><strong>Mã số:</strong> @Model.id</div>
                <div class="teacher-card-field">
                    <strong>Tên gia sư:</strong> 
                    <strong style="color:#008eff;">
                        <a href="/gia-su-2918.html">@Model.name</a>
                    </strong>
                </div>
                <div class="teacher-card-field"><strong>Giới tính:</strong> @Model.gender</div>
                <div class="teacher-card-field teacher-down"><strong>Ngày sinh:</strong> @Model.bday</div>
            </div>
        </div>

        <div class="teacher-card-desc">
            <div class="teacher-card-field"><strong>Mô tả:</strong></div>
            <div class="card-sem-des-content" style="height:150px !important; white-space: pre-line">@Model.description</div>
        </div>

        <div class="button-group-wrapper teacher-btn-group">
            <button class="card-btn tch-detail" onclick="window.location.href='/Teacher/Profile?tchId=@Model.id'">Xem chi tiết</button>
            <!-- <button class="card-btn choose">Chọn gia sư</button> -->
        </div>
    </div>
</div>
