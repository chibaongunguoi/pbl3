@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Scripts riêng cho admin -->
    @RenderSection("AdminScripts", required: false)
    @RenderSection("ManageLayoutScripts", required: false)
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const currentPath = window.location.pathname.toLowerCase();
        const menuLinks = document.querySelectorAll("#sidebar-menu li a");

        menuLinks.forEach(link => {
            const href = link.getAttribute("href").toLowerCase();

            if (currentPath === href) {
                const li = link.closest("li");
                if (li) {
                    li.classList.add("sidebar-link-active");
                }

                // Nếu muốn mở rộng luôn menu cha (hiện sub-menu nếu đang ẩn)
                const subMenu = link.closest(".sub-menu");
                if (subMenu) {
                    subMenu.style.display = "block";
                }
            }
        });
         
          // Đóng dropdown khi click bên ngoài - only for basic dropdowns
        document.addEventListener('click', function(event) {
            let notificationDropdown = document.getElementById("notification-dropdown");
            let notificationInfo = document.getElementById("notification-info");
            let enhancedNotificationWrapper = document.querySelector(".notification-icon-wrapper");
            
            // Only handle basic dropdowns, enhanced dropdown has its own handler
            if (!enhancedNotificationWrapper) {
                // Nếu click không phải trên notification-info hoặc notification-dropdown thì đóng notification-dropdown
                if (notificationDropdown && notificationInfo && !notificationInfo.contains(event.target) && !notificationDropdown.contains(event.target)) {
                    notificationDropdown.style.display = "none";
                }
            }
        });
    });
</script>

