@model List<AdminStuCorCard>

@{
    var studentName = ViewBag.StudentName ?? "học viên";
    var stuId = ViewBag.StuId ?? 0;
}

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        Học viên @studentName chưa tham gia khóa học nào.
    </div>
}
else
{    <div class="table-responsive">
        <table class="table table-striped table-checkall table-sm table-compact">
            <thead>                <tr>
                    <th scope="col" style="width: 5%">#</th>
                    <th scope="col" style="width: 25%">Tên khóa học</th>
                    <th scope="col" style="width: 15%">Đánh giá của học viên</th>
                    <th scope="col" style="width: 15%">Tình trạng</th>
                    <th scope="col" style="width: 15%">Môn học</th>
                    <th scope="col" style="width: 10%">Lớp</th>
                    <th scope="col" style="width: 15%">Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    @await Html.PartialAsync("Card/_AdminStuCorCard", course)
                }
            </tbody>
        </table>
    </div>
}
