@model List<AdminStuCorCard>

@{
    var studentName = ViewBag.StudentName ?? "học viên";
    var stuId = ViewBag.StuId ?? 0;
}

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        Học viên @studentName chưa tham gia khóa học nào.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-checkall">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên khóa học</th>
                    <th scope="col">Đánh giá của học viên</th>
                    <th scope="col">Tình trạng</th>
                    <th scope="col">Môn học</th>
                    <th scope="col">Lớp</th>
                    <th scope="col">Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    @await Html.PartialAsync("Card/_AdminStuCorCard", course)
                }
            </tbody>
        </table>
    </div>
}
