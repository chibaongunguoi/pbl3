@model List<AdminMngRatingCard>

@if (Model.Count == 0)
{
    <div class="text-center p-4">
        <p>Không có đánh giá nào trong hệ thống.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-checkall">
            <thead>
                <tr>
                    <th scope="col" style="width: 5%">#</th>
                    <th scope="col" style="width: 15%">Học viên</th>
                    <th scope="col" style="width: 15%">Khóa học</th>
                    <th scope="col" style="width: 10%">Điểm đánh giá</th>
                    <th scope="col" style="width: 15%">Thời gian</th>
                    <th scope="col" style="width: 25%">Nội dung</th>
                    <th scope="col" style="width: 15%">Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rating in Model)
                {
                    @await Html.PartialAsync("Card/_AdminMngRatingCard", rating)
                }
            </tbody>
        </table>
    </div>
}
