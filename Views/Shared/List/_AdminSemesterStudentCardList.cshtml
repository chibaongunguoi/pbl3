@model List<AdminSemesterStudentCard>

@if (Model.Count == 0)
{
    <div class="text-center p-4">
        <p>Không có học viên nào đăng ký kỳ học này.</p>
    </div>
}
else
{
    <div class="modal-body">
        <div class="table-responsive">
            <table class="table table-striped table-checkall">
                <thead>
                    <tr>
                        <th scope="col" style="width: 5%">#</th>
                        <th scope="col" style="width: 20%">Họ tên</th>
                        <th scope="col" style="width: 10%">Giới tính</th>
                        <th scope="col" style="width: 15%">Số điện thoại</th>                        <th scope="col" style="width: 15%">Thời gian yêu cầu</th>
                        <th scope="col" style="width: 15%">Trạng thái</th>
                        <th scope="col" style="width: 20%">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        @await Html.PartialAsync("Card/_AdminSemesterStudentCard", student)
                    }
                </tbody>
            </table>
        </div>
    </div>
}
