@model RatingCard

<div class="reviews-item">
    <div class="student-info d-flex">
        <div class="user-info">
            <span class="fullname">@Model.name</span>
            <div class="reviews-date">
                <!--Gần đây-->
                <!--2 năm trước-->
            </div>
            <div class="show-star">
                @await Html.PartialAsync("_Rating5StarList", (float)Model.score)
            </div>
            <div class="reply-user-time">@Model.date</div>
        </div>
    </div>
    <div class="message" style="text-align: justify;">@Model.description</div>
    <div class="info-course text-muted">Học viên của khóa:
        @* <a target="_blank"
            href="https://unitop.vn/course/html-css-21-ngay-thanh-thao-xay-dung-giao-dien-web-thuc-te-tu-ban-thiet-ke-photoshop/intro"
            title="Html Css 21 Ngày - Thành thạo xây dựng giao diện web thực tế từ bản thiết kế Photoshop">
        </a> *@
        <a target="_blank" style="color: dodgerblue;">
            @Model.semester_dates
        </a>
    </div>
</div>
