@model int

<div class="modal modal fade EditStudentModal" idx="@Model" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh Sửa Thông Tin Tài Khoản</h5>
                <button type="button" class="btn-close close-popup" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <div class="AdminEditStuProfileFormPlaceholder" idx="@Model"></div>
            </div>
        </div>
    </div>
</div>
<script>   
    function load() {
        const modal = document.querySelector(`.EditStudentModal[idx="${@Model}"]`);
        modal.addEventListener('hidden.bs.modal', function() {
            const activePaginationLink = document.querySelector('#pagination-bar .page-link.pa-active');
            activePaginationLink.click();
        });
    }
    load();
</script> 