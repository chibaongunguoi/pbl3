@model TeacherAddForm

@{
    Layout = "Layout/_AdminManageLayout";
}

@await Html.PartialAsync("_SuccessErrorMessage")
@await Html.PartialAsync("_Message", Model.Message)

<div class="pt-add-content-wrapper">
    <div class="pt-add-content ">
        <div class="pt-add-title">Thông tin giảng viên</div>
        <div class="pt-add-form">
            <form id="pt-add" method="POST">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label asp-for="Username">
                           <div class="required-icon">*</div> Tên đăng nhập
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <input class="pt-add-form-input pt-name-input" type="text" asp-for="Username" placeholder="Nhập vào" maxlength="150">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label asp-for="Password">
                            <div class="required-icon">*</div>Mật khẩu 
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <input asp-for="Password" placeholder="Nhập vào" class="pt-add-form-input pt-name-input" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="hide-show-icon-wrapper">
                            <div class="eye-icon-wrapper" >
                                <svg class="eye-icon eye-close" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 36 36" width="100%" height="100%" >
                                     <path d="M32.711 11c-3.166 4.841-8.573 8.03-14.71 8.03-6.139 0-11.546-3.189-14.712-8.03M9.79 17.5l-3 5m8.5-3-1 5.5m12.5-7.5 3 5m-8.5-3 1 5.5"></path>
                                </svg>  
                                <svg
                                    class="eye-icon eye-open"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 36 36"
                                    width="100%"
                                    height="100%"           >
                                    <circle cx="18" cy="17.5" r="4"></circle>
                                    <path d="M3.284 18.47a1.77 1.77 0 0 1 0-1.94c3.167-4.84 8.573-8.03 14.711-8.03s11.545 3.19 14.711 8.03a1.77 1.77 0 0 1 0 1.94c-3.166 4.84-8.573 8.03-14.71 8.03-6.139 0-11.545-3.19-14.712-8.03"></path>
                                </svg>        
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label asp-for="PasswordConfirm">
                            <div class="required-icon">*</div>Nhập lại mật khẩu 
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <input class="pt-add-form-input pt-name-input" asp-for="PasswordConfirm" placeholder="Nhập vào" maxlength="150">
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                </div>

                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label asp-for="Name">
                           <div class="required-icon">*</div> Họ và tên
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <input class="pt-add-form-input pt-name-input" type="text" asp-for="Name" placeholder="Nhập vào" maxlength="150">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label for="cat">
                           <div class="required-icon">*</div> Giới tính
                        </label>
                    </div>
                     <div class="pt-add-input-wrapper pt-add-subject-wrapper">
                         <label class="auth-label-radio">
                             Nam
                            <input value="@Gender.male" asp-for="MGender" type="radio" class="auth-radio" checked/>
                        </label>
                        <label class="auth-label-radio">
                             Nữ
                            <input value="@Gender.female" asp-for="MGender" type="radio" class="auth-radio" />
                        </label>
                        <span asp-validation-for="MGender" class="text-danger"></span>
                    </div>
                </div>

                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label asp-for="Bday">
                          <div class="required-icon">*</div>  Ngày sinh
                        </label>
                    </div>
                     <div class="pt-add-input-wrapper pt-add-subject-wrapper">
                       <input class="input cb" asp-for="Bday">
                       <span asp-validation-for="Bday" class="text-danger"></span>
                    </div>
                </div>
                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label asp-for="Tel">
                         <div class="required-icon">*</div>   Số điện thoại
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <input class="pt-add-form-input" type="text" asp-for="Tel" placeholder="Nhập vào" maxlength="150">
                        <span asp-validation-for="Tel" class="text-danger"></span>
                    </div>
                </div>
                <div class="pt-add-form-item">
                    <div class="pt-add-label">
                        <label asp-for="Description">
                            Mô tả
                        </label>
                    </div>
                    <div class="pt-add-input-wrapper">
                        <textarea class="pt-add-form-input detail-input" asp-for="Description" id="description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>  
                <div class="pt-add-btn-group">
                    <button class="hl-btn"><span>Tạo tài khoản</span></button>
                </div>
            </form>
        </div>
    </div>
</div>

@section AdminManageLayoutScripts {
    <!-- Password toggle functionality now handled by passwordVisibility.js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
