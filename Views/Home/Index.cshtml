@model BriefTeacherPage

@{
    var contextComponent = ".pagination-list";
    var contextUrl = "/teacherAPI/getBriefTeacherCards";
}

<div class="text-center">
    <div class="shop-section-wrapper container">
        <div class="shop-section-header section-header">
            <div class="shop-section-title section-title" >
                Danh sách gia sư
            </div>
        </div>
        <div class="shop-section-content">
            <div class="card-search-wrapper">
                @await Html.PartialAsync("_SearchTeacherSection")
            </div>
            <div class="card-product-ul pagination-list"> </div>
            <div class="pagination-bar"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pagination.js" asp-append-version="true"></script>
    <script>
        const filterForm = {}
        initPagination(@Model.MPaginationInfo.CurrentPage, @Model.MPaginationInfo.TotalPages, "@contextUrl", "@contextComponent", filterForm)
    </script>
}
